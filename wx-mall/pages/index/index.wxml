<view class="container" style='padding-bottom:40rpx'>
  <swiper class="banner" indicator-dots="true" autoplay="true" interval="3000" duration="1000">
    <swiper-item wx:for="{{banner}}" wx:key="{{item.id}}">
      <navigator url="{{item.link}}">
        <image src="{{item.image_url}}" background-size="cover"></image>
      </navigator>
    </swiper-item>
  </swiper>

  <!-- 导航 -->
  <view class="m-menu">
    <navigator  class="item" url="{{item.url}}" wx:for="{{channel}}" wx:key="{{item.id}}">
      <image src="{{item.icon_url}}" background-size="cover"></image>
      <text>{{item.name}}</text>
    </navigator>

    <navigator  class="item" url="/pages/recommend/recommend?userId={{userId}}" >
      <image src="/static/images/images/recommend.png" background-size="cover"></image>
      <text>项目推荐</text>
    </navigator>
  </view>
  

  <!-- 活动资讯 -->

  <view class='title' style='width:90%;margin:0 auto;'>
      <label>活动资讯</label>
      <navigator url='/pages/activityList/activityList'><text>查看全部</text></navigator>
  </view>

  <view class='activity-box' >
    <navigator url='/pages/activity/activity?activityId={{item.id}}' class='activity' wx:for="{{activity}}" wx:key="{{item}}">
      <view class='activities'>
        <image src='{{item.banner}}'></image>
        <text>{{item.title}}</text>
        <view class='time-box'>
          <image src='/static/images/images/clock.jpg'></image>
          <text>{{item.startTime}}</text>
        </view>

        <view class='time-box'>
          <image src='/static/images/images/address.jpg'></image>
          <text>{{item.position}}</text>
        </view>
      </view>
    </navigator>
  </view>

