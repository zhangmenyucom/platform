.news-box{
  width: 100%;
}
.news{
  width: 80%;
  margin: 40rpx auto;
  border-bottom: 1px solid #999999;
  padding-bottom: 20rpx;
}
.title{
  text-align: left;
  color: #6388CF;
  font-size: 30rpx;
}
.content{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
  margin-top: 10rpx
}
.content rich-text{
  width: 100%;
  color: #999999;
}
.time{
  float: right;
  color: #999999;
  font-size: 26rpx;
  margin-top: 30rpx;
}