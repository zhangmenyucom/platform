<!--pages/activity/activity.wxml-->

<view class="activity-box">
    <view class="title">{{activity.title}}</view>
    <view class="author">发起者：{{activity.author}}</view>
    <image class="" src="{{activity.banner}}" style="width:100%" ></image>
    <view class="content">{{activity.content}}</view>
    <view class="time">时间：{{startTime}}--{{endTime}}</view>
    <view class="address">地点：{{activity.position}}</view>
</view>
