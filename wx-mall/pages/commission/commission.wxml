<!--pages/commission/commission.wxml-->
<view class='commissions'  wx:if="{{commission.length == 0}}">
    <image src='/static/images/images/pop-failure.png'></image>
    <text>您还没有邀请好友哦,</text>
    <text>快去邀请好友获取佣金吧！</text>
    <view class='return' bindtap='returnIndex'>返回首页</view>
</view>

<view class='commission-box' wx:else>
  <view class='commission'  wx:for="{{commission}}" wx:key="{{item}}">
    <view class='commission-top'>
      <text class='sourceUserName'>买家：{{item.sourceUserName}}</text>
    </view>
    
    <view class='commission-top orderSn'>
      <text class='sourceUserName'>订单号：{{item.orderSn}}</text>
    </view>

    <view class='commission-top time'>
      <text class='sourceUserName'>{{item.createTime}}</text>
    </view>

    <view class='commission-top orderInfo'>
      <image src='{{item.goodsPicUrl}}'></image>
      <view class='userInfo-box'>
        <view class='userInfo'>
          <image class='sourceAvatar' src='{{item.sourceAvatar}}'></image>
          <view class='nickname'>{{item.sourceUserName}}</view>
          <view class='role'>{{item.level}}</view>
        </view>

        <view class='goodInfo'>
          <view>{{item.goodsName}}</view>
          <view>用户发展会员佣金奖励<span style="color:red;font-weight:600;font-size:36rpx;">{{item.gainBalance}}</span>元</view>
        </view>
      </view>
    </view>
  </view>
</view>

