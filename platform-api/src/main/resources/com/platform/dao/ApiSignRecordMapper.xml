<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ApiSignRecordMapper">

    <resultMap type="com.platform.entity.SignRecordVo" id="signRecordMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="gainPoint" column="gain_point"/>
        <result property="signDate" column="sign_date"/>
    </resultMap>

    <select id="queryObject" resultType="com.platform.entity.SignRecordVo">
		select
			`id`,
			`user_id`,
			`gain_point`,
			`sign_date`
		from sign_record
		where id = #{id}
	</select>
    <select id="queryLatestSign" resultType="com.platform.entity.SignRecordVo">
		select
			`id`,
			`user_id`,
			`gain_point`,
			`sign_date`
		from sign_record
		where user_id = #{userId} order by sign_date desc limit 1
	</select>

    <select id="queryList" resultType="com.platform.entity.SignRecordVo">
        select
        `id`,
        `user_id`,
        `gain_point`,
        `sign_date`
        from sign_record
        WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from sign_record
        WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
    </select>

    <insert id="save" parameterType="com.platform.entity.SignRecordVo" useGeneratedKeys="true" keyProperty="id">
		insert into sign_record(
			`user_id`,
			`gain_point`,
			`sign_date`)
		values(
			#{userId},
			#{gainPoint},
			#{signDate})
	</insert>

    <update id="update" parameterType="com.platform.entity.SignRecordVo">
        update sign_record
        <set>
            <if test="userId != null">`user_id` = #{userId},</if>
            <if test="gainPoint != null">`gain_point` = #{gainPoint},</if>
            <if test="signDate != null">`sign_date` = #{signDate}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from sign_record where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from sign_record where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>