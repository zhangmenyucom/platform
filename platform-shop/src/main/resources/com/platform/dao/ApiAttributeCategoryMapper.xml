<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ApiAttributeCategoryMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.platform.entity.AttributeCategoryVo" id="attributeCategoryMap">
        <result property="id" column="id"/>
        <result property="merchantId" column="merchant_id"/>
        <result property="name" column="name"/>
        <result property="enabled" column="enabled"/>
    </resultMap>

    <select id="queryObject" resultType="com.platform.entity.AttributeCategoryVo">
		select * from attribute_category where id = #{value}
	</select>

    <select id="queryList" resultType="com.platform.entity.AttributeCategoryVo">
        select * from attribute_category
        WHERE 1=1
        <if test="merchantId!=null">
            and merchant_id=#{merchantId}
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
		select count(*) from attribute_category
        WHERE 1=1
        <if test="merchantId!=null">
            and merchant_id=#{merchantId}
        </if>
	</select>

    <insert id="save" parameterType="com.platform.entity.AttributeCategoryVo">
		insert into attribute_category
		(
			`id`,
			`merchant_id`,
			`name`, 
			`enabled`
		)
		values
		(
			#{id},
			#{merchantId},
			#{name}, 
			#{enabled}
		)
	</insert>

    <update id="update" parameterType="com.platform.entity.AttributeCategoryVo">
        update attribute_category
        <set>
            <if test="name != null">`name` = #{name},</if>
            <if test="enabled != null">`enabled` = #{enabled}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from attribute_category where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from attribute_category where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>