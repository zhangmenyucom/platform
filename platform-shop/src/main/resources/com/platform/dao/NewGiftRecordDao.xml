<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.NewGiftRecordDao">

    <resultMap type="com.platform.entity.NewGiftRecordEntity" id="newGiftRecordMap">
        <result property="id" column="id"/>
        <result property="merchantId" column="merchant_id"/>
        <result property="userId" column="user_id"/>
        <result property="hongBao" column="hong_bao"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="queryObject" resultType="com.platform.entity.NewGiftRecordEntity">
		select
			`id`,
			`merchant_id`,
			`user_id`,
			`hong_bao`,
			`create_time`,
			`update_time`
		from new_gift_record
		where id = #{id}
	</select>

    <select id="queryList" resultType="com.platform.entity.NewGiftRecordEntity">
        select
        n.`id`,
        n.`merchant_id`,
        n.`user_id`,
        n.`hong_bao`,
        n.`create_time`,
        n.`update_time`,
        u.nickname as nick_name,
        u.avatar
        from new_gift_record n,user u
        WHERE 1=1 and n.user_id=u.id
        <if test="merchantId!=null">
            and n.merchant_id=#{merchantId}
        </if>
        <if test="name != null and name.trim() != ''">
            AND u.nickname LIKE concat('%',#{name},'%')
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from new_gift_record
        WHERE 1=1
        <if test="merchantId!=null">
            and merchant_id=#{merchantId}
        </if>
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
    </select>

    <insert id="save" parameterType="com.platform.entity.NewGiftRecordEntity" useGeneratedKeys="true" keyProperty="id">
		insert into new_gift_record(
			`merchant_id`,
			`user_id`,
			`hong_bao`,
			`create_time`,
			`update_time`)
		values(
			#{merchantId},
			#{userId},
			#{hongBao},
			#{createTime},
			#{updateTime})
	</insert>

    <update id="update" parameterType="com.platform.entity.NewGiftRecordEntity">
        update new_gift_record
        <set>
            <if test="merchantId != null">`merchant_id` = #{merchantId},</if>
            <if test="userId != null">`user_id` = #{userId},</if>
            <if test="hongBao != null">`hong_bao` = #{hongBao},</if>
            <if test="createTime != null">`create_time` = #{createTime},</if>
            <if test="updateTime != null">`update_time` = #{updateTime}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from new_gift_record where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from new_gift_record where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>