<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.UserCouponDao">

    <resultMap type="com.platform.entity.UserCouponEntity" id="userCouponMap">
        <result property="id" column="id"/>
        <result property="couponId" column="coupon_id"/>
        <result property="couponNumber" column="coupon_number"/>
        <result property="userSn" column="user_sn"/>
        <result property="usedTime" column="used_time"/>
        <result property="orderSn" column="order_sn"/>
        <result property="addTime" column="add_time"/>
    </resultMap>

    <select id="queryObject" resultType="com.platform.entity.UserCouponEntity">
		select
			`id`,
			`coupon_id`,
			`coupon_number`,
			`user_sn`,
			`used_time`,
			`add_time`,
			`order_sn`
		from user_coupon
		where id = #{id}
	</select>

    <select id="queryList" resultType="com.platform.entity.UserCouponEntity">
        select
        user_coupon.id,
        user_coupon.coupon_id,
        user_coupon.coupon_number,
        user_coupon.user_id,
        user_coupon.used_time,
        user_coupon.add_time,
        user_coupon.order_sn,
        user.username user_name,
        coupon.name coupon_name
        from user_coupon
        LEFT JOIN user ON user_coupon.user_id = user.id
        LEFT JOIN coupon ON user_coupon.coupon_id = coupon.id
        WHERE 1=1
        <if test="userName != null and userName.trim() != ''">
            AND user.username LIKE concat('%',#{userName},'%')
        </if>
        <if test="couponName != null and couponName.trim() != ''">
            AND coupon.name LIKE concat('%',#{couponName},'%')
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by user_coupon.id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*)
        from user_coupon LEFT JOIN user ON user_coupon.user_id = user.id
        LEFT JOIN coupon ON user_coupon.coupon_id = coupon.id
        WHERE 1=1
        <if test="userName != null and userName.trim() != ''">
            AND user.username LIKE concat('%',#{userName},'%')
        </if>
        <if test="couponName != null and couponName.trim() != ''">
            AND coupon.name LIKE concat('%',#{couponName},'%')
        </if>
    </select>

    <insert id="save" parameterType="com.platform.entity.UserCouponEntity" useGeneratedKeys="true" keyProperty="id">
		insert into user_coupon(
			`coupon_id`,
			`coupon_number`,
			`user_id`,
			`used_time`,
			`add_time`,
			`order_sn`)
		values(
			#{couponId},
			#{couponNumber},
			#{userId},
			#{usedTime},
			#{addTime},
			#{orderSn})
	</insert>

    <update id="update" parameterType="com.platform.entity.UserCouponEntity">
        update user_coupon
        <set>
            <if test="couponId != null">`coupon_id` = #{couponId},</if>
            <if test="couponNumber != null">`coupon_number` = #{couponNumber},</if>
            <if test="userId != null">`user_id` = #{userId},</if>
            <if test="usedTime != null">`used_time` = #{usedTime},</if>
            <if test="addTime != null">`add_time` = #{addTime},</if>
            <if test="orderSn != null">`order_sn` = #{orderSn}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="delete">
		delete from user_coupon where id = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from user_coupon where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>